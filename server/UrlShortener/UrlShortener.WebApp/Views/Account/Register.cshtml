@using UrlShortener.WebApp.ViewModels.Account;
@{
    ViewData["Title"] = "Regiser";
}

@model RegisterViewModel

<div class="modal-dialog ">
    <div class="modal-content rounded-3 shadow">
        <div class="modal-header p-4 pb-1">
            <h4 class="fw-bold">Register</h4>
        </div>
        <div class="modal-body p-4 p-1">
            <div class="m-1 text-danger" asp-validation-summary="All"></div>
            <form asp-controller="Account" asp-action="Register" method="post">
                <div class="input-group mb-3">
                    <label class="input-group-text">Email</label>
                    <input type="text" class="form-control" asp-for="Email" placeholder="Enter Email..." />
                </div>
                <div class="input-group mb-3">
                    <label class="input-group-text">Password</label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Enter Password..." />
                </div>
                <div class="input-group mb-3">
                    <label class="input-group-text">Full Name</label>
                    <input type="text" class="form-control" asp-for="UserName" placeholder="Enter your Username..." />
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
                <a asp-action="Login" class="btn btn-outline-secondary ml-2">Login</a>
            </form>
        </div>
    </div>
</div>